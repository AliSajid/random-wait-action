{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "assignees": [
        "AliSajid"
    ],
    "baseBranches": [
        "next"
    ],
    "extends": [
        "config:best-practices",
        "group:definitelyTyped",
        "group:githubArtifactActions",
        "group:linters"
    ],
    "labels": [
        "dependencies",
        "renovate"
    ],
    "packageRules": [
        {
            "automerge": true,
            "matchManagers": [
                "pre-commit",
                "github-actions"
            ],
            "schedule": [
                "before 5am every weekday"
            ]
        },
        {
            "automerge": true,
            "matchDepTypes": [
                "devDependencies",
                "minor",
                "patch"
            ],
            "matchPackagePatterns": [
                "eslint",
                "prettier",
                "jest"
            ]
        }
    ],
    "platformCommit": true,
    "pre-commit": {
        "enabled": true
    },
    "schedule": [
        "after 10pm and before 5am every weekday",
        "every weekend"
    ],
    "semanticCommits": "enabled"
}
